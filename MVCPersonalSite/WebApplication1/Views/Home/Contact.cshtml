@model WebApplication1.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}



<main class="flex-shrink-0">
    <!-- Page content-->
    <section class="py-5">
        <div class="container px-5">
            <!-- Contact form-->
            <div class="bg-dark rounded-3 py-5 px-4 opacity-98 px-md-5 mb-5">
                <div class="text-center mb-5">
                    <h1 class="fw-bolder text-white">Contact Me</h1>
                    <p class="lead fw-normal text-white-50 mb-0">I look forward to hearing from you</p>
                </div>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-8 col-xl-6">

                        <form asp-action="Contact" id="contactForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mb-3">

                                <input asp-for="Name" class="form-control" placeholder="Enter your name..." />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">

                                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">

                                <input asp-for="Subject" class="form-control" placeholder="Subject" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">

                                <textarea asp-for="Message" class="form-control" placeholder="Enter your message here..." style="height: 10rem"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <div class="form-group d-grid">
                                <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


