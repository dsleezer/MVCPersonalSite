@{
    ViewData["Title"] = "Email Confirmation";
}
<main class="flex-shrink-0">
    <!-- Page content-->
    <section class="py-5">
        <div class="container px-5">
            <!-- Contact form-->
            <div class="bg-dark rounded-3 py-5 px-4 opacity-98 px-md-5 mb-5">
                <div class="text-center mb-5">
                    <h1 class="fw-bolder text-white">Message Sent</h1>
                    <p class="lead fw-normal text-white-50 mb-0">
                        Your message was sent successfully on @DateTime.Now.ToShortDateString() at @DateTime.Now.ToShortTimeString()
                    </p>
                    <p class="lead fw-normal text-white-50 mb-0">
                        I will respond as soon as I am able to.
                    </p>
                </div>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-8 col-xl-6">
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
